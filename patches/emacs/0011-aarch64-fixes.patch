--- a/nt/emacs.rc.in
+++ b/nt/emacs.rc.in
@@ -1,6 +1,8 @@
 Emacs ICON   icons/emacs.ico
 32649 CURSOR icons/hand.cur
-#if defined (WIN64) || defined (__x86_64__)
